+	model = "WindSolve i.MX6 Quad Curie Board";
+	compatible = "ws,imx6q-curie", "fsl,imx6q";
+};
+
diff --git a/arch/arm/boot/dts/imx6qdl-curie.dtsi b/arch/arm/boot/dts/imx6qdl-curie.dtsi
new file mode 100644
