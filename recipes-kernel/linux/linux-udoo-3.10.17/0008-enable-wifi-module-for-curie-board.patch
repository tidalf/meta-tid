+++ b/arch/arm/boot/dts/imx6qdl-curie.dtsi
@@ -13,6 +13,13 @@
 	memory {
 		reg = <0x10000000 0x40000000>;
 	};
+
+	wifi_cs: wifi-cs {
+		compatible = "gpio-reset";
+		reset-gpios = <&gpio2 4 GPIO_ACTIVE_HIGH>;
+		reset-delay-us = <1000>;
+		#reset-cells = <0>;
+	};
 };
 
