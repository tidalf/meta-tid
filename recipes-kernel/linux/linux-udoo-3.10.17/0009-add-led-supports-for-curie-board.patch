From 7e63dd233d22c9cda0e81178f50280b050ba1265 Mon Sep 17 00:00:00 2001
From: Cui Gao <gao.cui@windsolve.com>
Date: Fri, 1 Aug 2014 17:20:20 +0800
Subject: [PATCH 09/15] add led supports for curie board

---
 arch/arm/boot/dts/imx6qdl-curie.dtsi |   37 ++++++++++++++++++++++++++++++++++
 1 file changed, 37 insertions(+)

diff --git a/arch/arm/boot/dts/imx6qdl-curie.dtsi b/arch/arm/boot/dts/imx6qdl-curie.dtsi
index aae393d..a106774 100644
--- a/arch/arm/boot/dts/imx6qdl-curie.dtsi
+++ b/arch/arm/boot/dts/imx6qdl-curie.dtsi
@@ -20,6 +20,43 @@
 		reset-delay-us = <1000>;
 		#reset-cells = <0>;
 	};
+
+	leds {
+		compatible = "gpio-leds";
+
+		boot-led {
+			label = "boot";
+			gpios = <&gpio7 12 GPIO_ACTIVE_LOW>;
+			linux,default-trigger = "heartbeat";
+			retain-state-suspended;
+			default-state = "off";
+		};
+		wifi-led {
+			label = "wifi";
+			gpios = <&gpio1 6 GPIO_ACTIVE_LOW>;
+			retain-state-suspended;
+			default-state = "off";
+		};
+		error-led {
+			label = "error";
+			gpios = <&gpio1 1 GPIO_ACTIVE_LOW>;
+			retain-state-suspended;
+			default-state = "off";
+		};
+		user1-led {
+			label = "user1";
+			gpios = <&gpio1 2 GPIO_ACTIVE_LOW>;
+			retain-state-suspended;
+			default-state = "off";
+		};
+		user2-led {
+			label = "user2";
+			gpios = <&gpio1 9 GPIO_ACTIVE_LOW>;
+			retain-state-suspended;
+			default-state = "off";
+		};
+	};
+
 };
 
 &uart1 {
